{
  "categoriasEvento": {
    "baseUrl": "http://localhost:8080/api/categoriasevento",
    "routes": [
      {
        "method": "POST",
        "description": "Crea una nueva categoría de evento.",
        "url": "http://localhost:8080/api/categoriasevento",
        "body": {
          "nombre": "clases"
        }
      },
      {
        "method": "GET",
        "description": "Devuelve los datos de una categoría por su ID.",
        "url": "http://localhost:8080/api/categoriasevento/{id}"
      },
      {
        "method": "PUT",
        "description": "Actualiza los datos de una categoría existente.",
        "url": "http://localhost:8080/api/categoriasevento/{id}",
        "body": {
          "id": 1,
          "nombre": "Taller Educativo"
        }
      },
      {
        "method": "DELETE",
        "description": "Elimina una categoría por su ID.",
        "url": "http://localhost:8080/api/categoriasevento/{id}"
      },
      {
        "method": "GET",
        "description": "Devuelve una categoría de evento según el nombre.",
        "url": "http://localhost:8080/api/categoriasevento/buscar?nombre={nombre}"
      },
      {
        "method": "GET",
        "description": "Devuelve una lista de todas las categorías.",
        "url": "http://localhost:8080/api/categoriasevento"
      }
    ]
  },

